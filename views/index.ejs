         <div class="alert alert-success">
            <strong>Sign up succesful!</strong> <%= data.message %>
          </div>
          <% } %>
          <% if(data.hasOwnProperty("logged_in") && (data.logged_in == true)){ %>
            <div class="alert alert-success">
               <strong>Log in succesful!</strong> <%= data.message %>
             </div>
             <% } %>
